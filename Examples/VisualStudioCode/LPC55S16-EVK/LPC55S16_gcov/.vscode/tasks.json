{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "doxygen",
            "command": "doxygen Doxyfile",
            "options": {
                "cwd": "${workspaceFolder}/doxy"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
        {
            "type": "shell",
            "label": "gcovr",
            "command": "gcovr --html-details -o ./cov_report/main.html",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
    ]
}